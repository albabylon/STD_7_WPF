<Window x:Class="EmployeeManagement.View.EmployeesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManagement.View"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:EmployeeManagement.ViewModels"
        Title="EmployessView" Height="450" Width="800">

    <Window.DataContext>
        <vm:EmployeesViewModel />
    </Window.DataContext>
    
    <Grid>
        <ListView ItemsSource="{Binding Employees}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding LastName}">
                        <GridViewColumnHeader Content="Фамилия"/>
                    </GridViewColumn>
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding FirstName}">
                        <GridViewColumnHeader Content="Имя"/>
                    </GridViewColumn>
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding Age}">
                        <GridViewColumnHeader Content="Возраст"/>
                    </GridViewColumn>
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding CompanyName}">
                        <GridViewColumnHeader Content="Компания"/>
                    </GridViewColumn>
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding Position}">
                        <GridViewColumnHeader Content="Должность"/>
                    </GridViewColumn>
                    <GridViewColumn Width="100" DisplayMemberBinding="{Binding CityName}">
                        <GridViewColumnHeader Content="Город"/>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
